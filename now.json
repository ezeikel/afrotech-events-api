{
  "version": 2,
  "name": "afrotech-events-api",
  "builds": [
      { "src": "api/index.js", "use": "@now/node" }
  ],
  "routes": [
      { "src": "/.*", "dest": "api/index.js" }
  ],
  "build": {
    "env": {
      "DATABASE_ENDPOINT": "@afrotech_events_database_endpoint"
    }
  },
  "env": {
    "PORT": "7777",
    "DATABASE_ENDPOINT": "@afrotech_events_database_endpoint"
  }
}