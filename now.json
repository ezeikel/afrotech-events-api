{
  "version": 2,
  "name": "afrotech-events-api",
  "builds": [
      { "src": "api/index.js", "use": "@now/node-server" }
  ],
  "routes": [
      { "src": "/.*", "dest": "api/index.js" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "PORT": "7777",
      "DATABASE_ENDPOINT": "@database_endpoint",
      "FRONTEND_URL": "https://afrotech.events"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "7777",
    "DATABASE_ENDPOINT": "@database_endpoint",
    "FRONTEND_URL": "https://fiveyards.app"
  }
}